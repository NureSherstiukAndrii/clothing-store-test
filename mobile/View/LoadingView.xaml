<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.View.LoadingView"
             Title="LoadingView"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ActivityIndicator Color="Gray" IsRunning="True" HeightRequest="100" WidthRequest="100"
                       HorizontalOptions="Center" VerticalOptions="Center"/>

        <Label Text="Loading..." Grid.Row="1" TextColor="Gray" HorizontalOptions="Center" FontSize="Large"/>
    </Grid>
</ContentPage>